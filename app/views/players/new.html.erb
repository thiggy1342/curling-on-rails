<h1>Add a new player to <%= @team.team_name %></h1>

  <%= form_with model: [@league, @team, @team.players.build] do |form| %>
  <p>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </p>
  <p>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </p>
  <p>
    <%= form.label :position %>
    <%= form.text_field :position %>
  </p>
  <p>
    <%= form.check_box :member %>
    <%= form.label :member, "currently a member?" %>
  </p>
  <p>
    <%= form.submit %>
  </p>

<% end %>